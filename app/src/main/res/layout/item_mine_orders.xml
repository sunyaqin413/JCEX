<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/context_bg"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:background="@color/word_orange">
      <TextView
          style="@style/OrdinaryBlackTextTheme"
          android:textColor="@color/word_white"
          android:layout_marginLeft="4dp"
          android:padding="6dp"
          android:text="运单号:"/>
      <TextView
          android:id="@+id/tv_number"
          style="@style/OrdinaryBlackTextTheme"
          android:padding="6dp"
          android:textColor="@color/word_white"
          android:text="112234455"/>
   </LinearLayout>
   <!---->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <TextView
          style="@style/OrdinaryBlackTextTheme"
          android:layout_marginLeft="4dp"
          android:padding="6dp"
          android:text="目的地:"/>
      <TextView
          android:id="@+id/tv_destination"
          style="@style/OrdinaryBlackTextTheme"
          android:padding="6dp"
          android:text="美国"/>
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <TextView
          style="@style/OrdinaryBlackTextTheme"
          android:layout_marginLeft="4dp"
          android:padding="6dp"
          android:text="运输方式:"/>
      <TextView
          android:id="@+id/tv_transport_mode"
          style="@style/OrdinaryBlackTextTheme"
          android:padding="6dp"
          android:text="佳成专线"/>
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <TextView
          style="@style/OrdinaryBlackTextTheme"
          android:layout_marginLeft="4dp"
          android:padding="6dp"
          android:text="实重:"/>
      <TextView
          android:id="@+id/tv_weight"
          style="@style/OrdinaryBlackTextTheme"
          android:padding="6dp"
          android:text="10KG"/>
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <TextView
          style="@style/OrdinaryBlackTextTheme"
          android:layout_marginLeft="4dp"
          android:padding="6dp"
          android:text="体积:"/>
      <TextView
          android:id="@+id/tv_volume"
          style="@style/OrdinaryBlackTextTheme"
          android:padding="6dp"
          android:text="30"/>
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <TextView
          style="@style/OrdinaryBlackTextTheme"
          android:layout_marginLeft="4dp"
          android:padding="6dp"
          android:text="类型:"/>
      <TextView
          android:id="@+id/tv_type"
          style="@style/OrdinaryBlackTextTheme"
          android:padding="6dp"
          android:text="包裹"/>
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <TextView
          style="@style/OrdinaryBlackTextTheme"
          android:layout_marginLeft="4dp"
          android:padding="6dp"
          android:text="收件人:"/>
      <TextView
          android:id="@+id/tv_recipient"
          style="@style/OrdinaryBlackTextTheme"
          android:padding="6dp"
          android:text="xxx,86755-56896321"/>
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <TextView
          style="@style/OrdinaryBlackTextTheme"
          android:layout_marginLeft="4dp"
          android:padding="6dp"
          android:text="发件人:"/>
      <TextView
          android:id="@+id/tv_sender"
          style="@style/OrdinaryBlackTextTheme"
          android:padding="6dp"
          android:text="xxx,86755-56896321"/>
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <TextView
          style="@style/OrdinaryBlackTextTheme"
          android:layout_marginLeft="4dp"
          android:padding="6dp"
          android:text="申报信息:"/>
      <TextView
          android:id="@+id/tv_apply_info"
          style="@style/OrdinaryBlackTextTheme"
          android:padding="6dp"
          android:text="xxx"/>
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <TextView
          style="@style/OrdinaryBlackTextTheme"
          android:layout_marginLeft="4dp"
          android:padding="6dp"
          android:text="总运费:"/>
      <TextView
          android:id="@+id/tv_total_freight"
          style="@style/OrdinaryBlackTextTheme"
          android:padding="6dp"
          android:text="188RMB"/>
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <TextView
          android:id="@+id/tv_time"
          style="@style/OrdinaryBlackTextTheme"
         android:layout_marginLeft="10dp"
          android:padding="6dp"
          android:text="2018-04-13 11:24:36"/>
   </LinearLayout>
   <View
       style="@style/commonHorizontalViewTheme"/>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <TextView
          android:id="@+id/tv_order_status"
          style="@style/OrdinaryBlackTextTheme"
          android:layout_marginLeft="4dp"
          android:padding="6dp"
          android:layout_alignParentLeft="true"
          android:text="待付款"/>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="20dp"
          android:orientation="horizontal">
      <Button
          android:id="@+id/tv_ok"
          style="@style/OrdinaryBlackTextTheme"
          android:background="@drawable/sl_common_btn_grey"
          android:padding="4dp"
          android:visibility="visible"
          android:text="付款"/>
      <Button
          android:id="@+id/tv_cancel"
          style="@style/OrdinaryBlackTextTheme"
          android:layout_marginLeft="10dp"
          android:padding="4dp"
          android:visibility="visible"
          android:background="@drawable/sl_common_btn_grey"
          android:text="取消"/>
      </LinearLayout>
   </RelativeLayout>

</LinearLayout>