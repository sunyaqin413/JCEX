<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/commonLayoutViewTheme"
    android:orientation="vertical">
    <include layout="@layout/activity_common_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <View style="@style/commonHorizontalViewTheme" />
            <!--尊称-->
            <RelativeLayout
                style="@style/mineOrderEditLvTheme"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/OrdinaryBlackTextTheme"
                    android:text="尊称" />

                <EditText
                    android:id="@+id/et_name"
                    style="@style/mineCommonEditTextTheme"
                    android:imeOptions="actionNext"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:layout_marginRight="10dp"
                    android:hint="请输入您的尊称" />

            </RelativeLayout>
            <View style="@style/commonHorizontalViewTheme" />
            <!--电话-->
            <RelativeLayout
                style="@style/mineOrderEditLvTheme"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/OrdinaryBlackTextTheme"
                    android:text="电话" />

                <EditText
                    android:id="@+id/et_phone"
                    style="@style/mineCommonEditTextTheme"
                    android:imeOptions="actionNext"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:layout_marginRight="10dp"
                    android:hint="请输入您的联系电话" />

            </RelativeLayout>
            <View style="@style/commonHorizontalViewTheme" />
            <!--邮箱-->
            <RelativeLayout
                style="@style/mineOrderEditLvTheme"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/OrdinaryBlackTextTheme"
                    android:text="邮箱" />

                <EditText
                    android:id="@+id/et_email"
                    style="@style/mineCommonEditTextTheme"
                    android:imeOptions="actionNext"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:layout_marginRight="10dp"
                    android:hint="请输入您的联系邮箱" />

            </RelativeLayout>
            <View style="@style/commonHorizontalViewTheme" />
            <!--地址-->
            <RelativeLayout
                style="@style/mineOrderEditLvTheme"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/OrdinaryBlackTextTheme"
                    android:text="地址" />

                <EditText
                    android:id="@+id/et_address"
                    style="@style/mineCommonEditTextTheme"
                    android:imeOptions="actionNext"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:layout_marginRight="10dp"
                    android:hint="请输入您的联系地址" />

            </RelativeLayout>
            <View style="@style/commonHorizontalViewTheme" />
            <!--投入金额-->
            <RelativeLayout
                style="@style/mineOrderEditLvTheme"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/OrdinaryBlackTextTheme"
                    android:text="投入金额" />

                <EditText
                    android:id="@+id/et_money"
                    style="@style/mineCommonEditTextTheme"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:layout_marginRight="10dp"
                    android:hint="请输入您的尊称" />
            </RelativeLayout>
            <View style="@style/commonHorizontalViewTheme" />
            <!--联系人身份-->
            <TextView
                style="@style/OrdinaryBlackTextTheme"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="联系人身份" />

            <RadioGroup
                android:id="@+id/rg_contact"
                style="@style/mineOrderEditLvTheme"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/btn_01"
                    style="@style/OrdinaryBlackTextTheme"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="我是新手" />
                <RadioButton
                    android:id="@+id/btn_02"
                    style="@style/OrdinaryBlackTextTheme"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="我是物流商" />
                <RadioButton
                    android:id="@+id/btn_03"
                    style="@style/OrdinaryBlackTextTheme"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="相关从业者" />


            </RadioGroup>



            <Button
                android:id="@+id/btn_submit"
                style="@style/CommonSubmitBtnTheme"
                android:layout_marginTop="20dp"
                android:padding="6dp"
                android:text="预约加盟"
                 />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
